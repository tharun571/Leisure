<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFrag"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >



        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/transpbg"
        android:padding="20dp"

        android:id="@+id/layoutl"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:textSize="24sp"
                android:fontFamily="@font/prodreg"
                android:textColor="#000"/>

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(per person)(â‚¹)"
                android:textSize="16sp"
                android:fontFamily="@font/prodreg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="           :"
                android:textSize="24sp"
                android:fontFamily="@font/prodreg"
                android:textColor="#000"/>

            <EditText
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:inputType="number"
                android:id="@+id/budg"
                android:fontFamily="@font/prodreg"
                android:textSize="24sp"
                />


        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_margin="8dp">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Number of people"
                  android:textSize="24sp"
                  android:fontFamily="@font/prodreg"
                  android:textColor="#000"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="          :"
                  android:layout_marginLeft="3dp"
                  android:textSize="24sp"
                  android:fontFamily="@font/prodreg"
                  android:textColor="#000"/>
              <EditText
                  android:layout_width="56dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:inputType="number"
                  android:id="@+id/ppl"
                  android:fontFamily="@font/prodreg"
                  android:textSize="24sp"/>

        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_margin="8dp">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Maximum Distance"
                  android:textSize="24sp"
                  android:fontFamily="@font/prodreg"
                  android:textColor="#000"/>
              <TextView
                  android:layout_marginLeft="4dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="(km)"
                  android:textSize="16sp"
                  android:fontFamily="@font/prodreg"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="  :"
                  android:textSize="24sp"
                  android:fontFamily="@font/prodreg"
                  android:textColor="#000"/>

              <EditText
                  android:layout_width="56dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:inputType="numberDecimal"
                  android:id="@+id/dist"
                  android:fontFamily="@font/prodreg"
                  android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

          <Switch
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Going on a Date?"
              android:fontFamily="@font/prodreg"
              android:textSize="16sp"
              android:id="@+id/dateswitch"
              />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/prodreg"
                android:background="@drawable/button"
                android:text="Done"
                android:id="@+id/don"/>





        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

</FrameLayout>